{% extends 'faq/base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <h1>Tag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Libellé</th>
                <td>{{ tag.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_faq_tag_edit', {'id': tag.id}) }}" class="btn btn-success mr-2">Modifier</a>
    <a href="{{ path('app_faq_tag_list') }}" class="btn btn-primary">Retour à la liste</a>

    {{ include('faq/tag/_delete_form.html.twig') }}
{% endblock %}